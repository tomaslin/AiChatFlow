{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "scripts": [ "background.js" ],
        "type": "module"
    },

    "content_scripts": [{
        "js": [
            "baseProvider.js",
            "chatTranscriber.js",
            "claude.js",
            "grok.js",
            "gemini.js",
            "storageManager.js",
            "fileAction.js",
            "fileActionUI.js",
            "fileManager.js",
            "editorUI.js",
            "content.js",
            "batchChoice.js",
            "promptPlayer.js",
            "markDownConverter.js",
            "zipManager.js",
            "simpleChoice.js",
            "copilot.js",
            "deepseek.js"
        ],
        "css": [ "content.css", "dialogs.css"],
        "matches": [
            "*://*.gemini.google.com/*",
            "*://*.grok.com/*",
            "*://claude.ai/*",
            "*://chat.deepseek.com/*",
            "*://copilot.microsoft.com/*"
        ]
    }],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "fileSystem"
    ]
}
